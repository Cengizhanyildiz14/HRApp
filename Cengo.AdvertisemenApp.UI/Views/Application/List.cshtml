@model List<AdvertisementListDto>
@{
    Layout = "_Layout";
}

<div class="container">
    @{
        @if (Model?.Count > 0)
        {
            <div class="text-end my-3 p-1">
                <a asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>
            </div>
            <div class="row">
                @foreach (var advertisement in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-header">
                                @advertisement.Title
                            </div>
                            <div class="card-body">
                                <p class="card-text">
                                    Oluşturma Tarihi: @advertisement.CreatedDate.ToString("dd MMMM yyyy")<br />
                                    İlan Durumu: @(advertisement.Status ? "Aktif" : "Pasif")
                                </p>
                                <div class="btn-group justify-content-center d-flex">
                                    <a asp-action="Update" asp-controller="Application" asp-route-Id="@advertisement.Id" class=" guncelle ">Güncelle</a>
                                    <a asp-action="Remove" asp-controller="Application" asp-route-Id="@advertisement.Id" class=" sil">Sil</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-end my-3 p-1">
                <a asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>
            </div>
            <div class="mt-3 text-center lead">
                Herhangi bir ilan bulunmamaktadır.
            </div>
        }
    }
</div>
<style>
    .guncelle {
        justify-content: center;
        display: flex;
        padding: 8px;
        color: white;
        background: #6666ff;
        margin: 10px;
        border-radius: 10px;
        font-size: 14px;
    }

    .sil {
        justify-content: center;
        display: flex;
        padding: 8px;
        color: white;
        background: #6666ff;
        margin: 10px;
        border-radius: 10px;
        font-size: 14px;
    }

    .card .card-header {
        align-items: center;
        justify-content: center;
        display: flex;
        background: rgb(55, 68, 107);
        color: white;
    }

    .card .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding20 %;
        color: white;
        background: rgb(38, 43, 85);
    }

    a {
        text-decoration: none;
    }
</style>